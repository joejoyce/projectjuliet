include mixins

doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='Rapid and Resilient Raspberries')
    meta(name='author', content='Team Juliet')

    title #{title} - R&R Raspberries

    link(href='//fonts.googleapis.com/css?family=Open+Sans:400,700|Gabriela', rel='stylesheet')
    link(href='/css/normalize.css', rel='stylesheet')
    link(href='/css/main.css', rel='stylesheet')
    link(href='/css/lib/mfglabs_iconset.css', rel='stylesheet')
    link(href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css', rel='stylesheet')

    script(src='/js/lib/jquery.js')
    script(src='/js/lib/bootstrap.js')
    script(src='/js/lib/highstock.js')
    script(src='/js/lib/segment-display.js')
    script(src='/js/lib/fast-live-filter.js')
    script(src='/js/main.js')
    
    block head

  body
    div#doc.base
      main#main.base
        block content
      include partials/aside
