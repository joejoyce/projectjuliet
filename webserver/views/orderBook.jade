extends layout

block jsStuff
  script(src='/js/error.js')

block content
  .page-header
    h3 Order Book    
    center
      h4 Please enter company symbol:
      if locals.error
        p.error.alert-danger #{error}
      form(role='form', name="input", action="/orderBook/", method="get")
        #row
          .input-group        
            input.form-control(type="text", title="Company Symbol", name="companySymbol")
            span.input-group-btn
              button.btn.btn-primary Go!
