mixin symbol_list(list)
  ul#symbols
    each symbol in list
      li(data-symbol="#{symbol.symbol}")
        a(href="/stock-price/#{symbol.symbol_id}" title="#{symbol.company_name}") #{symbol.symbol}

mixin symbol_summary(symbol)
  div.symbol-panel
    div.name
      h1= symbol.symbol
      h2= symbol.company_name
    div.details
      table.details-data
        tbody
          tr
            td.field Last:
            td.datum 120.00
            td.field High:
            td.datum 
          tr
            td.field Volume:
            td.datum
            td.field Low:
            td.datum
          tr
            td.field Spread:
            td.datum
            td.field Change:
            td.datum
    canvas#display(width='200', height='60')
  nav.symbol-nav
    ul.symbol-menu
      li
        a(href="/stock-price/#{symbol.symbol_id}")
          i.icon.icon-math_ico
          |  Stock Price
      li
        a(href="/order-book/#{symbol.symbol_id}")
          i.icon.icon-newspaper
          |  Order Book

mixin client_list(list)
  table.table.table-hover.table-striped
    thead
      tr
        th IP
        th Total Packets
        th Current Packets
    tbody
      each client in list
        tr
          td=client.name
          td=client.totalPackets
          td=client.currentPackets