mixin symbol_list(list)
  ul#symbols
    each symbol in list
      li(data-symbol="#{symbol.symbol}")
        a(href="/stock-price/#{symbol.symbol_id}" title="#{symbol.company_name}") #{symbol.symbol}

mixin symbol_summary(symbol, stats)
  div.symbol-panel
    div.name
      h1= symbol.symbol
      h2= symbol.company_name
    div.details
      table.details-data
        tbody
          tr
            td.field Last:
            td.datum=stats.lastTrade
            td.field High:
            td.datum=stats.highestTrade
          tr
            td.field Volume:
            td.datum=stats.totalVolume
            td.field Low:
            td.datum=stats.lowestTrade
          tr
            td.field Spread:
            td.datum=stats.spread
            td.field Change:
            if(stats.change < 0) 
              td.datum.neg=stats.change
            else
              td.datum.pos=stats.change
    canvas#display(width='200', height='60')
  nav.symbol-nav
    ul.symbol-menu
      li
        a(href="/stock-price/#{symbol.symbol_id}")
          i.icon.icon-math_ico
          |  Stock Price
      li
        a(href="/order-book/#{symbol.symbol_id}")
          i.icon.icon-newspaper
          |  Order Book

mixin client_list(list)
  table.table.table-hover.table-striped
    thead
      tr
        th IP
        th Total Packets
        th Current Packets
    tbody
      each client in list
        tr
          td=client.name
          td=client.totalPackets
          td=client.currentPackets

mixin system_status(throughput, loadAv, total_orders, total_trades, total_symbols)
  div#system-status
    h2 Throughput (pac/sec): #{throughput}
    h2 Load Average: #{loadAv}
    h2 Total Orders: #{total_orders}
    h2 Total Trades: #{total_trades}
    h2 Total Symbols: #{total_symbols}
